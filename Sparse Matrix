#include<stdio.h>
int main(){
    int arr[100][100],i,j,r,c,count,p;
    printf("Enter row values :");
    scanf("%d",&r);
    printf("\nEnter columns values :");
    scanf("%d",&c);
    printf("\nEnter the matrix :");
    for (i=0;i<r;i++)    
    {    
        for (j=0;j<c;j++)    
        {    
 
            printf("Enter a[%d][%d]: ",i,j);        
 
            scanf("%d",&arr[i][j]);    
 
        }    
    }    
    printf("\n printing the elements ....\n");  
    for(i=0;i<r;i++)
    {    
        printf("\n");    
        for (j=0;j<c;j++)    
        {    
            printf("%d\t",arr[i][j]);    
        }    
    }  
        for (i=0;i<r;i++)    
    {    
        for (j=0;j<c;j++)    
        {    
    if(arr[i][j]==0)
    {
        count++;
    }
    else
    {
        p++;
    }
        }
    }
    if(count>p)
    {
        printf("\nGiven matrix is sparse matrix");
    }
    else
    {
        printf("\nGiven matric is not a sparse matrix");
    }
    printf("\n");
    printf("Rows  Columns  Values");
      printf("\n");
    for (i=0;i<r;i++)    
    {    
        for (j=0;j<c;j++)    
        {  
    if(arr[i][j]!=0)
    {
          printf("\n");
          printf("%d         %d        %d",i,j,arr[i][j]);
    }
        }
    }
return 0;
}
